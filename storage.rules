rules_version = '2';

// Reglas de seguridad para Firebase Storage

// Sólo usuarios autenticados
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // allow read, write: if request.auth != null; // Solo usuarios autenticados
      // O temporalmente para pruebas:
      allow read, write: if true; // ¡CUIDADO! Esto da acceso público total
    }
  }
}

